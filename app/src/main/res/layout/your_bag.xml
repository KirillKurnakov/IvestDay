<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivestday.view.Your_Bag">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_2"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/bag"
        app:titleTextColor="@color/black">

    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:id="@+id/state_of_an_account"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/rounded_2"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar">

        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:text="@string/all_price"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/all_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="33dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="282dp"
            android:layout_marginLeft="282dp"
            android:layout_marginTop="33dp"
            android:text="@string/price_change"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:text="@string/Stock_market"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="79dp"
            android:text="@string/facilities"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="99dp"
            android:text="@string/invest"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="119dp"
            android:text="@string/change_inv_fac"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="148dp"
            android:text="@string/Currency_market"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="167dp"
            android:text="@string/facilities"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="187dp"
            android:text="@string/invest"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="207dp"
            android:text="@string/change_inv_fac"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/facilities_fond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="79dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/invest_fond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="99dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_inv_fac_fond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="119dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/facilities_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="167dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/invest_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="187dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_inv_fac_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="207dp"
            android:text="@string/price"
            android:textColor="#FF2F4F4F"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/top_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="318dp"
            android:layout_marginLeft="318dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/topup"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/withdraw_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="318dp"
            android:layout_marginLeft="318dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/inputmoney"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/countriesList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_of_an_account" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_bot_nav"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
